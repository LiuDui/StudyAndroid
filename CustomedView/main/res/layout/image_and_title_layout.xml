<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageAndTitleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.customedview.views.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:image="@drawable/xunguang4"
            app:imageScaleType="center"
            app:titleText="this is a picture"
            app:titleTextSize="20sp"
            app:titleTextColor="#ff0000"/>

        <com.example.customedview.views.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:image="@drawable/img1"
            app:imageScaleType="center"
            app:titleText="this is a picture"
            app:titleTextSize="20sp"
            app:titleTextColor="#ff0000"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>