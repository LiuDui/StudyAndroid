<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_main_to_translte_by_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main to translate by xml"/>

        <Button
            android:id="@+id/btn_main_to_scale_by_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main to scale by xml"/>


        <Button
            android:id="@+id/btn_main_to_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main to rotate by xml"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>